{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build watching files",
            "type": "shell",
            "command": "stack build --file-watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "group": "build",
            "command": "stack exec -- idris --codegen malfunction ${file} -o ${fileDirname}/${fileBasenameNoExtension}.o",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.o",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Build and run",
            "type": "shell",
            "command": "stack exec -- idris --codegen malfunction ${file} -o ${fileDirname}/${fileBasenameNoExtension}.o && ${fileDirname}/${fileBasenameNoExtension}.o",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            // "options": {
            //     "cwd": "${fileDirname}"
            // },
            "command": "rm -r *.ibc *.o *.lang *.mlf",
            "presentation": {
                "reveal": "never",
            },
        }
    ]
}