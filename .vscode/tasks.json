{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build watching files",
            "type": "shell",
            "command": "stack build --file-watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "group": "build",
            "command": "stack exec -- idris --codegen malfunction ${file} -o ${fileDirname}/${fileBasenameNoExtension}.out",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true,
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true,
            }
        },
        {
            "label": "Build and run",
            "type": "shell",
            "command": "stack exec -- idris --codegen malfunction ${file} -o ${fileDirname}/${fileBasenameNoExtension}.out && ${fileDirname}/${fileBasenameNoExtension}.out",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true,
            }
        },
        {
            "label": "Malfunction and run",
            "type": "shell",
            "command": "malfunction compile ${file} -o ${fileDirname}/${fileBasenameNoExtension}o.out && ${fileDirname}/${fileBasenameNoExtension}o.out",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true,
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/test-idris/"
            },
            "command": "rm *.ibc *.out *.lang *.mlf",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": []
        }
    ]
}